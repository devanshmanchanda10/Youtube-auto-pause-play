{
  "manifest_version": 3,
  "name": "YouTube Auto Pause",
  "version": "1.0",
  "description": "Automatically pauses YouTube videos when switching to another application, window, or desktop",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}